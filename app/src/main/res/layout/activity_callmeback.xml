<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallmebackActivity">

    <EditText
        android:id="@+id/callmebackreciever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/phonenumber"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/callmeback_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/callmeback_btn"
        app:layout_constraintEnd_toEndOf="@+id/callmebackreciever"
        app:layout_constraintStart_toStartOf="@+id/callmebackreciever"
        app:layout_constraintTop_toBottomOf="@+id/callmebackreciever"
        android:onClick="callmeback"/>
</androidx.constraintlayout.widget.ConstraintLayout>